import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MarketingTool.Pro - AI-Powered Marketing Automation for Meta & Google Ads</title>
  <meta name="description" content="The secret marketing automation platform top agencies use. Create, optimize, and scale ads across Meta, Google, and 418+ marketing tools with AI." />
  <link href="https://fonts.googleapis.com" rel="preconnect" />
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DM+Sans:regular,500,600%7CInter+Tight:regular,500%7CChivo+Mono:regular,500" />
  <style>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      font-family: 'DM Sans', 'Inter Tight', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 25%, #16213e 50%, #1a1a2e 75%, #0a0a0f 100%);
      color: #ffffff;
      line-height: 1.6;
      overflow-x: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Hero V2 Section */
    .rt-hero-v2 {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 120px 20px 80px;
      position: relative;
      overflow: hidden;
      margin-top: 64px;
    }

    .rt-hero-v2::before {
      content: '';
      position: absolute;
      top: -40%;
      right: -15%;
      width: 800px;
      height: 800px;
      background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }

    .rt-hero-v2::after {
      content: '';
      position: absolute;
      bottom: -30%;
      left: -20%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(236, 72, 153, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 10s ease-in-out infinite reverse;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(40px); }
    }

    .rt-position-relative {
      position: relative;
      z-index: 10;
    }

    .rt-hero-v2-main {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .rt-hero-v2-wrap {
      display: flex;
      flex-direction: column;
      text-align: center;
      max-width: 900px;
    }

    .rt-sub-text {
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 2px;
      text-transform: uppercase;
      color: #515FBC;
      margin-bottom: 24px;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
      padding: 8px 20px;
      background: rgba(81, 95, 188, 0.1);
      border-radius: 30px;
      display: inline-block;
      border: 1px solid rgba(81, 95, 188, 0.3);
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .rt-hero-v2-wrap h1 {
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 800;
      line-height: 1.15;
      margin-bottom: 32px;
      color: #ffffff;
      animation: slideUp 0.8s ease 0.1s forwards;
      opacity: 0;
      text-shadow: 0 0 80px rgba(139, 92, 246, 0.5);
    }

    .rt-hero-v2-para-wrap {
      font-size: 1.125rem;
      color: #cbd5e1;
      max-width: 700px;
      margin: 0 auto 32px;
      line-height: 1.8;
      opacity: 0;
      animation: slideUp 0.8s ease 0.2s forwards;
    }

    .rt-hero-v2-button-wrap {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 60px;
      opacity: 0;
      animation: slideUp 0.8s ease 0.3s forwards;
    }

    /* Primary Colors - Madgicx/Omneky Style */
    :root {
      --primary-purple: #515FBC;
      --primary-light: #917aff;
      --primary-dark: #322996;
      --accent-purple: #8b5cf6;
      --accent-pink: #ec4899;
    }

    /* Button Styles */
    .rt-button {
      padding: 16px 36px;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      position: relative;
      overflow: hidden;
    }

    .rt-button-base {
      background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
      color: white;
      box-shadow: 0 8px 32px rgba(139, 92, 246, 0.3);
    }

    .rt-button-base:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 48px rgba(139, 92, 246, 0.4);
    }

    .rt-button-secondary {
      background: rgba(139, 92, 246, 0.1);
      color: #e2e8f0;
      border: 1px solid rgba(139, 92, 246, 0.3);
    }

    .rt-button-secondary:hover {
      background: rgba(139, 92, 246, 0.2);
      border-color: #8b5cf6;
    }

    .rt-hero-v2-client-wrap {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .rt-hero-v2-client-img-wrap {
      display: flex;
      gap: 8px;
      align-items: center;
    }

    .rt-hero-v2-client-image {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #8b5cf6, #ec4899);
      border-radius: 8px;
      animation: slideUp 0.8s ease 0.4s forwards;
      opacity: 0;
    }

    .rt-text-color-white {
      color: #ffffff;
      font-size: 14px;
      font-weight: 600;
    }

    /* Solution Section (Who We Are) */
    .rt-solution {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-solution-main {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
    }

    .rt-solution-left-part {
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-solution-right-part {
      opacity: 0;
      animation: slideUp 0.8s ease 0.2s forwards;
    }

    .rt-text-style-h2 {
      font-size: 2.5rem;
      font-weight: 700;
      line-height: 1.3;
      color: #f1f5f9;
      margin: 0;
    }

    .rt-text-color-light-tomato {
      color: #e66666;
    }

    .rt-solution-card-wrap {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
      margin-top: 40px;
    }

    .rt-solution-card {
      display: flex;
      flex-direction: column;
      gap: 12px;
      padding: 20px;
      background: rgba(139, 92, 246, 0.05);
      border-radius: 8px;
      border: 1px solid rgba(139, 92, 246, 0.2);
      transition: all 0.3s ease;
      opacity: 0;
      animation: slideUp 0.6s ease forwards;
    }

    .rt-solution-card:nth-child(1) { animation-delay: 0.3s; }
    .rt-solution-card:nth-child(2) { animation-delay: 0.4s; }
    .rt-solution-card:nth-child(3) { animation-delay: 0.5s; }
    .rt-solution-card:nth-child(4) { animation-delay: 0.6s; }

    .rt-solution-card:hover {
      background: rgba(139, 92, 246, 0.1);
      border-color: rgba(139, 92, 246, 0.4);
      transform: translateY(-4px);
    }

    .rt-text-style-h5 {
      font-size: 18px;
      font-weight: 600;
      color: #f1f5f9;
      margin: 0;
    }

    /* Feature Section */
    .rt-feature-v2 {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-feature-v2-heading-wrap {
      text-align: center;
      margin-bottom: 80px;
    }

    .rt-feature-v2-heading-wrap .rt-sub-text {
      margin-bottom: 16px;
    }

    .rt-feature-v2-heading-wrap h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-feature-v2-main-image {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
    }

    .rt-feature-v2-left-part {
      display: flex;
      flex-direction: column;
      gap: 40px;
    }

    .rt-feature-v2-card-wrap {
      display: flex;
      gap: 24px;
      align-items: flex-start;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-feature-v2-card-wrap:nth-child(1) { animation-delay: 0.2s; }
    .rt-feature-v2-card-wrap:nth-child(2) { animation-delay: 0.3s; }

    .rt-feature-v2-content-wrap {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .rt-feature-v2-content-wrap img {
      width: 40px;
      height: 40px;
    }

    .rt-feature-v2-card-text-wrap {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .rt-feature-v2-card-text-wrap h3 {
      font-size: 18px;
      font-weight: 600;
      color: #f1f5f9;
      margin: 0;
    }

    .rt-feature-v2-card-text-wrap p {
      color: #cbd5e1;
      font-size: 14px;
      margin: 0;
    }

    .rt-feature-v2-right-part {
      display: flex;
      flex-direction: column;
      gap: 40px;
    }

    /* Choose Us Section */
    .rt-choose-us {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-choose-us-main {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
    }

    .rt-choose-us-left-part {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 500px;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
      border-radius: 16px;
      font-size: 48px;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-choose-us-right-part {
      opacity: 0;
      animation: slideUp 0.8s ease 0.2s forwards;
    }

    .rt-choose-us-right-part .rt-sub-text {
      margin-bottom: 20px;
    }

    .rt-choose-us-right-part h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin-bottom: 24px;
      margin-top: 0;
    }

    .rt-choose-us-para-wrap {
      font-size: 1rem;
      color: #cbd5e1;
      margin-bottom: 32px;
      line-height: 1.8;
    }

    .rt-choose-us-card-wrap {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-bottom: 32px;
      opacity: 0;
      animation: slideUp 0.8s ease 0.3s forwards;
    }

    .rt-choose-us-card {
      display: flex;
      gap: 16px;
      align-items: flex-start;
    }

    .rt-choose-us-icon {
      width: 24px;
      height: 24px;
      min-width: 24px;
      color: #fbbf24;
      font-size: 20px;
    }

    .rt-choose-us-text-wrap-v1 {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .rt-choose-us-text-wrap-v1 h3 {
      font-size: 18px;
      font-weight: 600;
      color: #f1f5f9;
      margin: 0;
    }

    .rt-choose-us-text-wrap-v1 p {
      color: #cbd5e1;
      font-size: 14px;
      margin: 0;
    }

    .rt-choose-us-button-wrap {
      opacity: 0;
      animation: slideUp 0.8s ease 0.4s forwards;
    }

    /* Benefits Section */
    .rt-benefit-v2 {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-benefits-v2-heading-wrap {
      text-align: center;
      margin-bottom: 80px;
    }

    .rt-benefits-v2-heading-wrap .rt-sub-text {
      margin-bottom: 16px;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-benefits-v2-heading-wrap h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0;
      opacity: 0;
      animation: slideUp 0.8s ease 0.1s forwards;
    }

    .rt-benefits-v2-card-wrapper {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }

    .rt-features-v2-inner-one {
      padding: 32px;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 12px;
      transition: all 0.3s ease;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-features-v2-inner-one:nth-child(1) { animation-delay: 0.2s; }
    .rt-features-v2-inner-one:nth-child(2) { animation-delay: 0.3s; }
    .rt-features-v2-inner-one:nth-child(3) { animation-delay: 0.4s; }

    .rt-features-v2-inner-one:hover {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(236, 72, 153, 0.1) 100%);
      border-color: rgba(139, 92, 246, 0.4);
      transform: translateY(-4px);
    }

    .rt-features-v2-inner-one h3 {
      font-size: 20px;
      font-weight: 600;
      color: #f1f5f9;
      margin-bottom: 16px;
      margin-top: 0;
    }

    .rt-features-v2-inner-one p {
      color: #cbd5e1;
      font-size: 14px;
      margin: 0;
      line-height: 1.6;
    }

    /* Choose Us V2 Section */
    .rt-choose-us-v2 {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-choose-us-main-v2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
    }

    .rt-choose-us-v2-left {
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-choose-us-heading-wrap {
      margin-bottom: 40px;
    }

    .rt-choose-us-heading-wrap .rt-sub-text {
      margin-bottom: 16px;
    }

    .rt-choose-us-heading-wrap h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0;
    }

    .rt-choose-us-v2-content-wrap {
      display: flex;
      flex-direction: column;
      gap: 32px;
      opacity: 0;
      animation: slideUp 0.8s ease 0.1s forwards;
    }

    .rt-our-focus-v2-item-right {
      display: flex;
      flex-direction: column;
      gap: 16px;
      padding: 24px;
      background: rgba(139, 92, 246, 0.05);
      border-radius: 8px;
      border: 1px solid rgba(139, 92, 246, 0.2);
      transition: all 0.3s ease;
    }

    .rt-our-focus-v2-item-right:hover {
      background: rgba(139, 92, 246, 0.1);
      border-color: rgba(139, 92, 246, 0.4);
      transform: translateY(-2px);
    }

    .rt-choose-us-text-wrap {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .rt-choose-us-text-wrap img {
      width: 20px;
      height: 20px;
    }

    .rt-choose-us-text-wrap .rt-text-style-h6 {
      font-size: 18px;
      font-weight: 600;
      color: #f1f5f9;
      margin: 0;
    }

    .rt-choose-us-para-wrap-v2 {
      color: #cbd5e1;
      font-size: 14px;
      line-height: 1.6;
    }

    .rt-our-focus-v2-right {
      opacity: 0;
      animation: slideUp 0.8s ease 0.2s forwards;
      position: relative;
    }

    .rt-choose-us-content-wrap {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 16px;
      padding: 40px;
      position: relative;
      overflow: hidden;
    }

    .rt-choose-us-content-wrap .rt-text-style-h5 {
      font-size: 18px;
      font-weight: 600;
      color: #f1f5f9;
      margin-bottom: 20px;
    }

    .rt-choose-us-v2-image-wrap {
      position: relative;
      height: 250px;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(236, 72, 153, 0.02) 100%);
      border-radius: 8px;
      overflow: hidden;
    }

    .rt-choose-us-marquee-main {
      position: relative;
      height: 100%;
      overflow: hidden;
    }

    .rt-choose-us-marquee {
      height: 100%;
      display: flex;
      align-items: center;
    }

    .rt-marquee-item {
      flex-shrink: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .rt-choose-us-glow {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
      z-index: 0;
    }

    .rt-choose-us-star-image {
      position: absolute;
      top: -20%;
      right: -10%;
      width: 400px;
      height: 400px;
      opacity: 0.3;
      z-index: 1;
    }

    .rt-choose-us-glow-image {
      position: absolute;
      bottom: -30%;
      left: -20%;
      width: 600px;
      height: 600px;
      opacity: 0.2;
      z-index: 0;
    }

    /* Integration Section */
    .rt-integration {
      padding: 100px 20px;
      position: relative;
      max-width: 1400px;
      margin: 0 auto;
    }

    .rt-integration-heading-main {
      justify-content: center;
      margin-bottom: 60px;
    }

    .rt-integration-heading-wrap {
      text-align: center;
    }

    .rt-integration-heading-wrap .rt-sub-text {
      margin-bottom: 16px;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-integration-heading-wrap h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0;
      opacity: 0;
      animation: slideUp 0.8s ease 0.1s forwards;
    }

    .rt-integration-image-main {
      position: relative;
      opacity: 0;
      animation: slideUp 0.8s ease 0.2s forwards;
    }

    .rt-integration-image {
      width: 100%;
      border-radius: 16px;
      overflow: hidden;
      margin: 40px 0;
    }

    .rt-integration-image img {
      width: 100%;
      height: auto;
      display: block;
    }

    .rt-integration-icon-wrap {
      text-align: center;
      margin: 20px 0;
      font-size: 48px;
    }

    .rt-integration-gradient {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 200px;
      background: linear-gradient(180deg, transparent 0%, rgba(2, 2, 2, 0.8) 100%);
      pointer-events: none;
    }

    .rt-container-large {
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
    }

    .w-container {
      max-width: 1400px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 20px;
      padding-right: 20px;
    }

    /* FAQ Section */
    .rt-faq {
      padding: 100px 20px;
      position: relative;
      max-width: 1200px;
      margin: 0 auto;
    }

    .rt-faq-heading-wrap {
      text-align: center;
      margin-bottom: 60px;
    }

    .rt-faq-heading-wrap .rt-sub-text {
      margin-bottom: 16px;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-faq-heading-wrap h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0;
      opacity: 0;
      animation: slideUp 0.8s ease 0.1s forwards;
    }

    .rt-faq-dropdown-wrap {
      background: rgba(30, 41, 59, 0.5);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 8px;
      margin-bottom: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
      opacity: 0;
      animation: slideUp 0.8s ease forwards;
    }

    .rt-faq-dropdown-wrap:nth-child(1) { animation-delay: 0.2s; }
    .rt-faq-dropdown-wrap:nth-child(2) { animation-delay: 0.25s; }
    .rt-faq-dropdown-wrap:nth-child(3) { animation-delay: 0.3s; }
    .rt-faq-dropdown-wrap:nth-child(4) { animation-delay: 0.35s; }
    .rt-faq-dropdown-wrap:nth-child(5) { animation-delay: 0.4s; }
    .rt-faq-dropdown-wrap:nth-child(6) { animation-delay: 0.45s; }

    .rt-faq-top-part {
      padding: 20px;
      background: rgba(139, 92, 246, 0.05);
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s ease;
    }

    .rt-faq-top-part:hover {
      background: rgba(139, 92, 246, 0.1);
    }

    .r-faq-text-wrap {
      display: flex;
      gap: 16px;
      align-items: flex-start;
    }

    .r-faq-text-wrap .rt-text-style-h6:first-child {
      color: #e66666;
      min-width: 32px;
    }

    .rt-faq-right-part {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .rt-faq-plus {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #e66666;
      transition: transform 0.3s ease;
    }

    .rt-faq-plus::before {
      content: '+';
      font-size: 20px;
