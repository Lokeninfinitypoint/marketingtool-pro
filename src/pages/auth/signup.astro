<BaseLayout title="Sign Up | MarketingTool.Pro">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full">
      
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center space-x-2 text-2xl font-bold text-blue-600">
          <span class="text-3xl">ðŸš€</span>
