---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Marketing Tools - Browse 418+ Tools | MarketingTool.Pro</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
      background: linear-gradient(135deg, #020617 0%, #1a1d3a 50%, #0f172a 100%);
      color: #e2e8f0;
      line-height: 1.6;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .hero {
      min-height: 350px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 80px 20px 60px;
      margin-top: 64px;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #fbbf24 0%, #8b5cf6 50%, #ec4899 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 16px;
    }

    .hero p {
      font-size: 1.25rem;
      color: #cbd5e1;
      max-width: 600px;
      margin: 0 auto;
      margin-bottom: 24px;
    }

    .cta-btn {
      display: inline-block;
      padding: 16px 40px;
      background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
      color: white;
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1.125rem;
      transition: all 0.3s ease;
      box-shadow: 0 10px 30px rgba(139, 92, 246, 0.3);
    }

    .cta-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 40px rgba(139, 92, 246, 0.5);
    }

    .content {
      padding: 60px 20px 80px;
    }

    .controls {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-bottom: 40px;
    }

    .search-box {
      position: relative;
    }

    .search-box input {
      width: 100%;
      padding: 14px 20px;
      background: rgba(30, 41, 59, 0.8);
      border: 1px solid rgba(139, 92, 246, 0.3);
      border-radius: 8px;
      color: #e2e8f0;
      font-size: 16px;
    }

    .search-box input::placeholder {
      color: #64748b;
    }

    .search-box input:focus {
      outline: none;
      border-color: #8b5cf6;
      background: rgba(30, 41, 59, 0.95);
    }

    .filters {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 10px 20px;
      background: rgba(139, 92, 246, 0.1);
      border: 1px solid rgba(139, 92, 246, 0.2);
      color: #cbd5e1;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .filter-btn:hover,
    .filter-btn.active {
      background: linear-gradient(135deg, #8b5cf6, #ec4899);
      color: white;
      border-color: #8b5cf6;
    }

    .tools-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 24px;
      margin-bottom: 40px;
    }

    .tool-card {
      background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(25, 32, 54, 0.8) 100%);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 12px;
      padding: 24px;
      transition: all 0.3s ease;
      cursor: pointer;
      text-decoration: none;
      color: inherit;
      display: flex;
      flex-direction: column;
    }

    .tool-card:hover {
      border-color: rgba(139, 92, 246, 0.5);
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(139, 92, 246, 0.2);
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
    }

    .tool-icon {
      font-size: 48px;
      margin-bottom: 16px;
    }

    .tool-name {
      font-size: 18px;
      font-weight: 700;
      color: #f1f5f9;
      margin-bottom: 8px;
    }

    .tool-category {
      display: inline-block;
      padding: 6px 12px;
      background: rgba(139, 92, 246, 0.1);
      color: #8b5cf6;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 12px;
      width: fit-content;
    }

    .tool-description {
      color: #cbd5e1;
      font-size: 14px;
      flex-grow: 1;
      margin-bottom: 16px;
    }

    .tool-link {
      display: inline-block;
      padding: 10px 16px;
      background: rgba(139, 92, 246, 0.15);
      color: #8b5cf6;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .tool-link:hover {
      background: linear-gradient(135deg, #8b5cf6, #ec4899);
      color: white;
    }

    .results-info {
      text-align: center;
      color: #94a3b8;
      margin-bottom: 20px;
      font-size: 14px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #cbd5e1;
    }

    .empty-state h3 {
      font-size: 20px;
      color: #f1f5f9;
      margin-bottom: 12px;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2.5rem;
      }

      .tools-grid {
        grid-template-columns: 1fr;
      }

      .filters {
        flex-direction: column;
      }

      .filter-btn {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <Navigation />

  <!-- Hero -->
  <div class="hero">
    <div>
      <h1>Browse All Tools</h1>
      <p>Explore our complete library of 418+ marketing tools and integrations</p>
      <a href="https://app.marketingtool.pro/tools" class="cta-btn">
        üöÄ View All 418 Tools in Dashboard
      </a>
    </div>
  </div>

  <!-- Content -->
  <section class="content">
    <div class="container">
      <!-- Search & Filters -->
      <div class="controls">
        <div class="search-box">
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Search tools by name or description..." 
          />
        </div>
        <div class="filters">
          <button class="filter-btn active" data-filter="all">All Tools</button>
          <button class="filter-btn" data-filter="ads-management">Ads Management</button>
          <button class="filter-btn" data-filter="content-creation">Content Creation</button>
          <button class="filter-btn" data-filter="analytics">Analytics</button>
          <button class="filter-btn" data-filter="email-marketing">Email Marketing</button>
        </div>
      </div>

      <!-- Results Info -->
      <div class="results-info">
        <span id="resultCount">Showing 14 tools</span>
      </div>

      <!-- Tools Grid -->
      <div class="tools-grid" id="toolsGrid">
        {tools.map(tool => (
          <a href={`/tools/${tool.url}`} class="tool-card">
            <div class="tool-icon">{tool.icon}</div>
            <div class="tool-name">{tool.name}</div>
            <div class="tool-category">
              {tool.category}
            </div>
            <p class="tool-description">{tool.description}</p>
            <span class="tool-link">View Details ‚Üí</span>
          </a>
        ))}
      </div>

      <!-- Empty State (hidden by default) -->
      <div class="empty-state" id="emptyState" style="display: none;">
        <h3>No tools found</h3>
        <p>Try adjusting your search or filter criteria</p>
      </div>
    </div>
  </section>

  <Footer />

  <script>
    const tools = {tools};
    const searchInput = document.getElementById('searchInput');
    const filterButtons = document.querySelectorAll('.filter-btn');
    const toolsGrid = document.getElementById('toolsGrid');
    const emptyState = document.getElementById('emptyState');
    const resultCount = document.getElementById('resultCount');

    let currentFilter = 'all';
    let currentSearch = '';

    function filterTools() {
      const filtered = tools.filter(tool => {
        const matchesFilter = currentFilter === 'all' || 
          tool.category.toLowerCase().replace(' ', '-') === currentFilter;
        const matchesSearch = tool.name.toLowerCase().includes(currentSearch.toLowerCase()) ||
          tool.description.toLowerCase().includes(currentSearch.toLowerCase());
        return matchesFilter && matchesSearch;
      });

      // Update grid
      if (filtered.length === 0) {
        toolsGrid.style.display = 'none';
        emptyState.style.display = 'block';
      } else {
        toolsGrid.style.display = 'grid';
        emptyState.style.display = 'none';
        
        // Recreate tool cards
        toolsGrid.innerHTML = filtered.map(tool => `
          <a href="/tools/${tool.url}" class="tool-card">
            <div class="tool-icon">${tool.icon}</div>
            <div class="tool-name">${tool.name}</div>
            <div class="tool-category">${tool.category}</div>
            <p class="tool-description">${tool.description}</p>
            <span class="tool-link">View Details ‚Üí</span>
          </a>
        `).join('');
      }

      resultCount.textContent = `Showing ${filtered.length} tool${filtered.length !== 1 ? 's' : ''}`;
    }

    searchInput.addEventListener('input', (e) => {
      currentSearch = e.target.value;
      filterTools();
    });

    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        filterButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentFilter = btn.dataset.filter;
        filterTools();
      });
    });
  </script>
</body>
</html>
