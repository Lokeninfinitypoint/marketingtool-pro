---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2 text-xl font-bold text-blue-600 hover:text-blue-700 transition-colors">
          <span class="text-2xl">ðŸš€</span>
          <span>MarketingTool.Pro</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={`text-sm font-medium transition-colors hover:text-blue-600 ${currentPath === '/' ? 'text-blue-600' : 'text-gray-700'}`}>
          Home
        </a>
        <a href="/dashboard" class={`text-sm font-medium transition-colors hover:text-blue-600 ${currentPath === '/dashboard' ? 'text-blue-600' : 'text-gray-700'}`}>
          Tools
        </a>
        <a href="/pricing" class={`text-sm font-medium transition-colors hover:text-blue-600 ${currentPath === '/pricing' ? 'text-blue-600' : 'text-gray-700'}`}>
          Pricing
        </a>
      </div>

      <!-- Auth Buttons -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="/auth/login" class="text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors">
          Sign In
        </a>
        <a href="/auth/signup" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button class="text-gray-700 hover:text-blue-600 p-2" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>
